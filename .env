# Kafka configuration
KAFKA_BROKER="localhost:9092"  # Kafka broker address
KAFKA_TOPIC="weather_data"     # Kafka topic name for weather data streaming
KAFKA_GROUP="weather_consumer_group"  # Consumer group ID

# Simulated weather data configuration
SIMULATED_TEMPERATURE_MIN=-10  # Min temperature for the simulated data
SIMULATED_TEMPERATURE_MAX=40   # Max temperature for the simulated data
SIMULATED_HUMIDITY_MIN=0       # Min humidity for the simulated data
SIMULATED_HUMIDITY_MAX=100     # Max humidity for the simulated data
SIMULATED_INTERVAL=5000        # Interval in milliseconds for generating data (e.g., 5 seconds)

# Alerting (Optional)
# For SMS alerts (if you're using a service like Twilio or a similar API)
SMS_API_KEY="your_sms_service_api_key"  # API key for SMS service (e.g., Twilio)
SMS_PHONE_NUMBER="your_twilio_phone_number"  # Phone number to send SMS from
ALERT_PHONE_NUMBER="recipient_phone_number"  # Phone number to send alerts to

# Email Alerts (Optional)
EMAIL_SMTP_SERVER="smtp.gmail.com"  # SMTP server address for email alerts
EMAIL_SMTP_PORT=587                # SMTP server port for email
EMAIL_USER="your_email@gmail.com"  # Sender email address
EMAIL_PASSWORD="your_app_password"  # Email app password or API key
ALERT_EMAIL="recipient_email@example.com"  # Email to send alerts to

# Data Processing
ROLLING_WINDOW_SIZE=10  # Size of the window for calculating the rolling average of temperature/humidity
TEMP_ALERT_THRESHOLD=35  # Temperature threshold for sending alerts (in Â°C)
HUMIDITY_ALERT_THRESHOLD=20  # Humidity threshold for sending alerts (in %)
